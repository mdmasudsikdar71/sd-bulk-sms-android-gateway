<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="30dp"
    tools:context=".activities.SplashScreenActivity">

    <ImageView
        android:id="@+id/splashScreenImageId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop='true'
        android:layout_centerHorizontal='true'
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/splashScreenAppNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_below="@+id/splashScreenImageId"
        android:gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:fontFamily="casual"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginLeft="20dp" />

    <ProgressBar
        android:id="@+id/splashScreenPrograssBarId"
        android:progressBackgroundTint="@color/purple_200"
        android:progressTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp" />

    <TextView
        android:id="@+id/splashScreenPrograssBarCountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splashScreenPrograssBarId"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:text="@string/placeholder_text" />

    <TextView
        android:id="@+id/splashScreenCompanyNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashScreenPrograssBarCountId"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        android:textStyle="italic"
        android:text="@string/powered_by" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashScreenPrograssBarCountId"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/muli_extralight_italic"
        android:text="@string/company_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>